<h1 class="main-title">After Midnight</h1>


<h2>Find something that's open</h2>

<div class="form-box">
<%= form_for(@result) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" "alert-dismissable" >
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h4>

      <ul>
      <% @result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control", placeholder: "Address you want to find places near" %>
  </div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
</div>