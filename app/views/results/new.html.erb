<h1 class="main-title">After Midnight</h1>


<h2>Find something that's open</h2>

<div class="form-box">
  <div class="form-title">Where are you now?</div>
<%= form_tag("/search", method: "get") do %>
  <div class="form-group">
    <%= label_tag(:street, "Street:") %><br>
    <%= text_field_tag(:street, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:city, "City:") %><br>
    <%= text_field_tag(:city, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:state, "State:") %><br>
    <%= text_field_tag(:state, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:zip, "Zipcode:") %><br>
    <%= text_field_tag(:zip, nil, class: "form-control") %>
  </div>
  
  <div class="actions">
    <%= submit_tag("Search") %>
  </div>
<% end %>
</div>